// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Session storage table.
// (IMPORTANT) This table is mandatory for Replit Auth, don't drop it.
model Session {
  sid    String   @id
  sess   String   // JSON stored as string in SQLite
  expire DateTime

  @@map("sessions")
}

// User storage table.
// (IMPORTANT) This table is mandatory for Replit Auth, don't drop it.
model User {
  id              String    @id
  email           String?   @unique
  firstName       String?   @map("first_name")
  lastName        String?   @map("last_name")
  profileImageUrl String?   @map("profile_image_url")
  niche           String?
  nicheLastChanged DateTime? @map("niche_last_changed")
  competitors     String?
  competitorsLastChanged DateTime? @map("competitors_last_changed")
  planType        String    @default("free") @map("plan_type")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @default(now()) @updatedAt @map("updated_at")

  // Relations
  contentIdeas         ContentIdea[]
  scheduledPosts       ScheduledPost[]
  competitorPostCache  CompetitorPostCache[]
  feedback             Feedback[]
  ratings              Rating[]
  usageTracking        UsageTracking[]
  tokenUsage           TokenUsage[]

  @@map("users")
}

model ContentIdea {
  id             Int      @id @default(autoincrement())
  userId         String   @map("user_id")
  headline       String
  caption        String
  hashtags       String
  ideas          String
  generationType String   @map("generation_type")
  isSaved        Boolean  @default(false) @map("is_saved")
  createdAt      DateTime @default(now()) @map("created_at")

  // Relations
  user           User            @relation(fields: [userId], references: [id])
  scheduledPosts ScheduledPost[]

  @@map("content_ideas")
}

model ScheduledPost {
  id            Int       @id @default(autoincrement())
  userId        String    @map("user_id")
  contentIdeaId Int?      @map("content_idea_id")
  headline      String
  caption       String
  hashtags      String
  ideas         String?
  scheduledDate DateTime  @map("scheduled_date")
  isCustom      Boolean   @default(false) @map("is_custom")
  status        String    @default("scheduled") @map("status")
  createdAt     DateTime  @default(now()) @map("created_at")

  // Relations
  user        User         @relation(fields: [userId], references: [id])
  contentIdea ContentIdea? @relation(fields: [contentIdeaId], references: [id])

  @@map("scheduled_posts")
}

model IndianHoliday {
  id          Int      @id @default(autoincrement())
  name        String
  date        DateTime
  description String?
  category    String?

  @@map("indian_holidays")
}

model CompetitorPostCache {
  id           Int      @id @default(autoincrement())
  userId       String   @map("user_id") @db.VarChar
  postId       String   @map("post_id") @db.VarChar
  username     String   @db.VarChar
  caption      String?
  hashtags     String[] @default([])
  likes        Int      @default(0)
  comments     Int      @default(0)
  imageUrl     String?  @map("image_url")
  postUrl      String   @map("post_url")
  profileUrl   String   @map("profile_url")
  timestamp    DateTime
  engagement   Int      @default(0) // calculated field: likes + comments
  cachedAt     DateTime @default(now()) @map("cached_at")
  expiresAt    DateTime @map("expires_at")

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@map("competitor_post_cache")
}

model Feedback {
  id        Int      @id @default(autoincrement())
  userId    String?  @map("user_id") @db.VarChar
  email     String?  @db.VarChar
  message   String
  category  String?  @db.VarChar(50) // 'bug', 'feature', 'general', etc.
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User? @relation(fields: [userId], references: [id])

  @@map("feedback")
}

model Rating {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id") @db.VarChar
  rating    Int      // 1-5 stars
  comment   String?
  context   String?  @db.VarChar(50) // 'post_scheduled', 'content_generated', etc.
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id])

  @@map("ratings")
}

model AdminOTP {
  id        Int      @id @default(autoincrement())
  email     String   @db.VarChar
  otp       String   @db.VarChar(6)
  expiresAt DateTime @map("expires_at")
  isUsed    Boolean  @default(false) @map("is_used")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("admin_otp")
}

model UsageTracking {
  id                    Int      @id @default(autoincrement())
  userId                String   @map("user_id") @db.VarChar
  date                  DateTime @db.Date
  generationsUsed       Int      @default(0) @map("generations_used")
  refineMessagesUsed    Int      @default(0) @map("refine_messages_used")
  generationLimit       Int      @default(2) @map("generation_limit")
  refineMessageLimit    Int      @default(30) @map("refine_message_limit")
  resetAt               DateTime @default(now()) @map("reset_at")
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @default(now()) @updatedAt @map("updated_at")

  // Relations
  user                  User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
  @@map("usage_tracking")
}

model TokenUsage {
  id           Int      @id @default(autoincrement())
  userId       String   @map("user_id") @db.VarChar
  usageDate    DateTime @map("usage_date") @db.Date
  tokensUsed   Int      @default(0) @map("tokens_used")
  ideasGenerated Int    @default(0) @map("ideas_generated")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @updatedAt @map("updated_at")
  
  // Relations
  user         User     @relation(fields: [userId], references: [id])
  
  @@unique([userId, usageDate])
  @@map("token_usage")
}